<UserControl x:Class="LeapPointer_PC.Menu.GPS"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    <Grid Background="PowderBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Image Source="Images/GPS.png " VerticalAlignment="Center" HorizontalAlignment="Right"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="GPS" VerticalAlignment="Top" FontFamily="CenturyGothic" FontSize="40" FontWeight="Bold" Margin="603,42,0,0" RenderTransformOrigin="-0.703,0.979"/>
        </Grid>

        <Grid Grid.Row="1">
            <Border BorderBrush="Gray" BorderThickness="3" HorizontalAlignment="Left" Height="500" VerticalAlignment="Top" Width="700" Margin="50,54,0,0">
                <Image Source="Images/Glasgow.png " Stretch="Fill" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>
            
        </Grid>

    </Grid>
</UserControl>
